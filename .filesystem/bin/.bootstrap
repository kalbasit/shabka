# isTrue()#{{{
function isTrue() {
    case "${1}" in
        [Tt][Rr][Uu][Ee])
            return 0
        ;;
        [Tt])
            return 0
        ;;
        [Yy][Ee][Ss])
            return 0
        ;;
        [Yy])
            return 0
        ;;
        1)
            return 0
        ;;
    esac
    return 1
}
#}}}
# isFalse()#{{{
function isFalse() {
    case "${1}" in
        [Ff][Aa][Ll][Ss][Ee])
            return 0
        ;;
        [Ff])
            return 0
        ;;
        [Nn][Oo])
            return 0
        ;;
        [Nn])
            return 0
        ;;
        0)
            return 0
        ;;
    esac
    return 1
}
#}}}
# isNumber()#{{{
function isNumber() {
    [ "${#}" -lt "1" ] && return 1

    case "${1}" in
        [0-9]*)
            return 0
            ;;
        *)
            return 1
            ;;
    esac
}
