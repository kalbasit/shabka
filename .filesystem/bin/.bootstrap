# inArray()#{{{
function inArray()
{
    local i
    [[ "${#}" -lt "2" ]] && return 1
    needle="${1}"
    shift
    haystack=(${@})
    for i in ${haystack[@]}; do
        [[ "${needle}" = "${i}" ]] && return 0
    done
    return 1
}
