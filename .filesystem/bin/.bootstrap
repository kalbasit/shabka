# fseq()#{{{
function fseq()
{
    [ "${#}" -ne 2 ] && return 1
    if [ "$( uname )" = "Linux" ]; then
        echo "$( seq "${1}" "${2}" )"
    elif [ "$( uname )" = "FreeBSD" ]; then
        echo "$( seq2 -s "${1}" -e "${2}" )"
    fi
}
#}}}
# fsed()#{{{
function fsed()
{
    if [ "$( uname )" = "Linux" ]; then
        sed ${@}
    elif [ "$( uname )" = "FreeBSD" ]; then
        gsed ${@}
    fi
}
